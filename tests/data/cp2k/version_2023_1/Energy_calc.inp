&GLOBAL
    PROJECT Energy_defect_shifted
    RUN_TYPE ENERGY
    PRINT_LEVEL MEDIUM
    EXTENDED_FFT_LENGTHS
&END GLOBAL

&FORCE_EVAL
    METHOD Quickstep
    &DFT
	&PRINT
	  &MO
	    ENERGIES
	  &END MO
	&END PRINT
        BASIS_SET_FILE_NAME BASIS_MOLOPT
        BASIS_SET_FILE_NAME ./BASIS_MOLOPT_UZH 
        POTENTIAL_FILE_NAME GTH_POTENTIALS
        &QS
	    METHOD GAPW
        &END QS
        &POISSON
            PERIODIC XY
	    POISSON_SOLVER ANALYTIC
        &END POISSON
	&SCF
	      !&SMEAR
		  !METHOD FERMI_DIRAC
		  !ELECTRONIC_TEMPERATURE [K] 300
	      !&END SMEAR
	      ADDED_MOS 30
	      SCF_GUESS RESTART
	      MAX_SCF 500
	       &PRINT
		  &RESTART
		     &EACH
			QS_SCF 10
		     &END EACH
		  &END RESTART
	       &END PRINT
	      &MIXING
		  METHOD BROYDEN_MIXING
		  ALPHA 0.4
		  BETA 1.5
		  NBROYDEN 8
	      &END
	    CHOLESKY OFF
	    &END SCF
        !&KPOINTS
        !    SCHEME GAMMA
        !&END KPOINTS
        &XC
		&XC_FUNCTIONAL PBE
		&END XC_FUNCTIONAL
		&VDW_POTENTIAL
			POTENTIAL_TYPE PAIR_POTENTIAL
			&PAIR_POTENTIAL
				TYPE DFTD3
				PARAMETER_FILE_NAME dftd3.dat
				REFERENCE_FUNCTIONAL PBE
				CALCULATE_C9_TERM T
			&END PAIR_POTENTIAL
		&END VDW_POTENTIAL
        &END XC
        &MGRID
            REL_CUTOFF 100
            CUTOFF 400
        &END MGRID
    &END DFT

    &SUBSYS
        &CELL
            A 39.82807949361525 0.0 0.0
            B -19.914039746807624 34.49212862541686 0.0
            C 0.0 0.0 40.0
            PERIODIC XY
        &END CELL
	&TOPOLOGY
		COORD_FILE_NAME supercell.xyz
		COORD_FILE_FORMAT XYZ
		&CENTER_COORDINATES
		&END CENTER_COORDINATES
	&END TOPOLOGY
        &KIND W
            BASIS_SET TZVP-MOLOPT-PBE-GTH-q14
            POTENTIAL GTH-PBE-q14
        &END KIND
        &KIND Se
            BASIS_SET TZVP-MOLOPT-PBE-GTH-q6
            POTENTIAL GTH-PBE-q6
        &END KIND
    &END SUBSYS
&END FORCE_EVAL
